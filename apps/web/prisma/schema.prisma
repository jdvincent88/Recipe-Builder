
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id          String      @id @default(cuid())
  title       String
  yield       String?
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  ingredients Ingredient[]
  steps       Step[]
  photos      Photo[]
  tags        Tag[]
  sourceUrl   String?
}

model Ingredient {
  id       String  @id @default(cuid())
  name     String
  quantity Float
  unit     String?
  notes    String?
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String
}

model Step {
  id       String  @id @default(cuid())
  order    Int
  text     String
  timerSec Int?
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String
}

model Photo {
  id       String  @id @default(cuid())
  url      String
  recipe   Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String
}

model Tag {
  id       String  @id @default(cuid())
  label    String
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId String?
}
